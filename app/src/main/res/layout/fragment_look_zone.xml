<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes1_imageView"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="#00000000"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintBottom_toTopOf="@+id/footer_imageView"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginStart="@dimen/common_padding"

            android:layout_marginStart="8dp"
            tools:layout_editor_absoluteX="0dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes2_imageView"

            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="#00000000"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintStart_toEndOf="@+id/eyes1_imageView"

            app:layout_constraintBottom_toTopOf="@+id/getStarted_button"
            android:layout_marginBottom="@dimen/common_margin"

            app:layout_constraintRight_toRightOf="parent"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes3_imageView"
            android:layout_width="130dp"
            android:layout_height="65dp"
            android:background="#00000000"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"

            app:layout_constraintBottom_toTopOf="@+id/getStarted_button"
            android:layout_marginBottom="80dp"

            app:layout_constraintRight_toRightOf="parent"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes2_1_imageView"
            android:layout_width="100dp"
            android:layout_height="50dp"

            app:layout_constraintBottom_toTopOf="@+id/eyes1_imageView"
            android:layout_marginBottom="32dp"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="@dimen/common_margin"
            tools:layout_editor_absoluteX="0dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes2_2_imageView"
            android:layout_width="60dp"
            android:layout_height="30dp"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/common_margin"

            app:layout_constraintBottom_toTopOf="@+id/eyes3_imageView"
            android:layout_marginBottom="32dp"

            app:layout_constraintRight_toRightOf="parent"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes3_1_imageView"
            android:layout_width="100dp"
            android:layout_height="50dp"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintBottom_toTopOf="@+id/eyes2_1_imageView"
            android:layout_marginBottom="72dp"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/common_margin"
            tools:layout_editor_absoluteX="0dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes3_2_imageView"
            android:layout_width="40dp"
            android:layout_height="20dp"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintBottom_toTopOf="@+id/eyes2_2_imageView"
            android:layout_marginBottom="32dp"

            app:layout_constraintRight_toRightOf="parent"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/eyes3_3_imageView"
            android:layout_width="120dp"
            android:layout_height="60dp"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintStart_toEndOf="@id/eyes3_1_imageView"
            android:layout_marginEnd="80dp"

            app:layout_constraintBottom_toTopOf="@+id/eyes2_1_imageView"
            android:layout_marginBottom ="40dp"

            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/character_imageView"
            android:layout_width="200dp"
            android:layout_height="175dp"

            android:background="#00000000"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:placeholderImage="@drawable/eyes1"

            app:layout_constraintBottom_toTopOf="@+id/getStarted_button"
            android:layout_marginBottom="80dp"
            android:src="@drawable/look_zone_header"
            tools:layout_editor_absoluteX="106dp"/>

        <Button
            android:id="@+id/getStarted_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onStartClick"
            android:text="@string/quiz_answer_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:textColor="@color/colorText"
            android:theme="@style/SplashButton"
            android:background="@drawable/rectangle_quiz_button"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/common_margin"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/common_margin"
            android:layout_marginStart="@dimen/common_margin"
            tools:layout_editor_absoluteX="16dp"/>

        <ImageView
            android:id="@+id/footer_imageView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/hunt_footer"

            android:scaleType="centerCrop"

            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="0dp"/>

    </android.support.constraint.ConstraintLayout>

</layout>

