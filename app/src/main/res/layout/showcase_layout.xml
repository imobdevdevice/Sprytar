<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/skipExplainer"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showcaseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="Some text goes here"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrowShowcase"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/back_arrow"/>

            <Button
                android:id="@+id/nextShowcase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@drawable/rectangle_quiz_button"
                android:fontFamily="sans-serif"
                android:text="Got it"
                android:visibility="invisible"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:textStyle="bold"
                android:theme="@style/SplashButton" />

            <ImageView
                android:id="@+id/forwardArrowShowcase"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/forward_arrow"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/skipExplainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:gravity="center"
        android:text="Close the explainer"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white" />
</RelativeLayout>