<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/green_transparent"
            android:alpha=".60"
            android:layout_centerInParent="true">

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_new" />

        <Button
            android:id="@+id/getStarted_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:onClick="onGetStartedClick"
            android:padding="@dimen/common_margin"
            android:text="@string/splash_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:textColor="@android:color/white"
            android:theme="@style/SplashButton"
            android:background="@drawable/rectangle_quiz_button"
            android:textSize="18sp" />

    </RelativeLayout>

</layout>